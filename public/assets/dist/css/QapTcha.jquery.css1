/** QapTcha CSS **/
/*****************/
.QapTcha {float:left;width:320px;}
.QapTcha .clr{clear:both}
.QapTcha .bgSlider {width:100%;height:39px;float:left;border:1px solid transparent;background-color:#ffffff;border-radius: 30px;}
.QapTcha .Slider {width:37px;height:37px;background:transparent url('../img/bg_draggable_qaptcha.png') no-repeat;cursor:e-resize;position:relative;top:0;left:0}
.QapTcha .TxtStatus {width:100%;margin-top:7px;margin-bottom: 7px;text-align:left;color:#bb2828;font-family:Verdana;font-size:10px;clear:both}
.QapTcha .dropSuccess {color:#4cc71d}
.QapTcha .dropError {color:#00c0ef}